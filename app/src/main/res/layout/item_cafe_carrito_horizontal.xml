<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivProducto_ItemCarrito"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:padding="8dp"
        android:background="@drawable/sh_bg_item_light_silver"
        android:contentDescription="@string/content_description"
        android:src="@drawable/png_caffe_mocha"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvProducto_ItemCarrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="XXXXX XXXXX"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivProducto_ItemCarrito" />

    <TextView
        android:id="@+id/tvDetalle_ItemCarrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:text="XXXXX XXXXX"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvProducto_ItemCarrito"
        app:layout_constraintStart_toEndOf="@id/ivProducto_ItemCarrito" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="S/"
        android:textSize="18sp"
        android:textColor="@color/carmine_pink"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tvDetalle_ItemCarrito"
        app:layout_constraintStart_toEndOf="@id/ivProducto_ItemCarrito" />

    <TextView
        android:id="@+id/tvPrecio_ItemCarrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="48dp"
        android:text="X.XX"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tvDetalle_ItemCarrito"
        app:layout_constraintStart_toEndOf="@id/ivProducto_ItemCarrito" />

<!--    android:layout_height="128dp"-->

    <TextView
        android:id="@+id/tvUnidades_itemCarrito"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:background="@drawable/sh_bg_btn_carmine_pink"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/flesh"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <ImageView
        android:id="@+id/ivMas_itemCarrito"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/content_description"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_plus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/flesh" />

    <ImageView
        android:id="@+id/ivMinus_itemCarrito"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/content_description"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_minus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/flesh" />

</androidx.constraintlayout.widget.ConstraintLayout>